@if (@Model.Count == 0)
{
  <p>No patients</p>
}
else
{
  <h1>List of all your patients</h1>
  <ul>
    @foreach (var patient in Model)
    {
      <li>@patient.GetName()</li>
    }
  </ul>
  <form action="/patients/delete" method="post">
    <button type="submit">Clear all patients</button>
  </form>
}
<p><a href="/patients/new">Add Patent</a></p>
<p><a href="/">Home</a></p>
