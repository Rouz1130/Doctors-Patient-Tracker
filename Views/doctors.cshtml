<h1>Doctor Patient Database</h1>
<h2>Doctors:</h2>
<br>
<ul>
  @if (Model.Count !=0)
  {
    @foreach(var doctor in Model)
    {
      <li><a href="/doctors/@doctor.GetId()">@doctor.GetName()</a> | <a href="/doctor/edit/@doctor.GetId()">Edit</a> | <a href="doctor/delete/@doctor.GetId()">Delete</a></li>
    }
  }
</ul>
